{
    "compilerOptions": {
        "module": "ESNext",         /* 允许使用现代模块语法 */
        "moduleResolution": "Bundler", /* 关键：让 TS 像 esbuild 一样处理模块，解决 ESM/CJS 混用报错 */
        "target": "ES2022",
        "lib": ["ES2022"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,    /* 允许 import React from 'react' 这种 CJS/ESM 互操作 */
        "skipLibCheck": true,       /* 关键：跳过 node_modules 里的类型检查，解决第三方库内部报错 */
        "resolveJsonModule": true,
        "outDir": "out"
    },
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test"]
}
